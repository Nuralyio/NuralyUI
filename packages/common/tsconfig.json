{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2020",
    "lib": ["es2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.stories.ts",
    "src/**/*.test.ts",
    "dist",
    "node_modules"
  ]
}
