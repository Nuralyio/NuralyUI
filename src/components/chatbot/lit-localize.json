{
  "$schema": "https://raw.githubusercontent.com/lit/lit/main/packages/localize-tools/config.schema.json",
  "sourceLocale": "en",
  "targetLocales": ["fr", "ar"],
  "tsConfig": "../../../tsconfig.json",
  "output": {
    "mode": "runtime",
    "outputDir": "locales/generated/",
    "localeCodesModule": "locales/locale-codes.ts"
  },
  "interchange": {
    "format": "xliff",
    "xliffDir": "xliff"
  }
}