FROM node:18-alpine

# Set working directory
WORKDIR /app

# Install dependencies globally for better caching
RUN npm install -g @storybook/cli

# Copy package files and install dependencies
COPY package*.json ./
RUN npm ci

# Copy storybook package files
COPY storybook-demo/package*.json ./storybook-demo/
WORKDIR /app/storybook-demo
RUN npm ci

# Go back to root
WORKDIR /app

# Expose port
EXPOSE 6006

# Default command
CMD ["npm", "run", "storybook"]
