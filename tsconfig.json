{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2020",
    "lib": ["es2020", "DOM", "DOM.Iterable"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck":true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@nuralyui/input/*": ["src/components/input/*"],
      "@nuralyui/common/mixins": ["packages/common/dist/mixins"],
      "@nuralyui/common/controllers": ["packages/common/dist/controllers"],
      "@nuralyui/common/themes": ["packages/common/dist/themes"],
      "@nuralyui/common/utils": ["packages/common/dist/utils"],
      "@nuralyui/common/constants": ["packages/common/dist/constants"],
      "@nuralyui/common": ["packages/common/dist/index"]
    },
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true
      }
    ]
  },
  "include": ["src/**/*.ts","src/**/*.json"],
  "exclude": ["src/**/*.stories.ts"]
}
